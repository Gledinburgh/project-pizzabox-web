@model OrderViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
  <div class="h2 row">
    <span class="col-sm"></span>
    <h1>Your Order has been placed</h1>
    <span class="col-sm"></span>
  </div>
  <div>

    @foreach (var order in Model.CustomerOrders)
    {
      @foreach (var pizza in order.Pizzas)
      {
        <span class="col-sm-6">

          <div class="card" style="">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">@order.Store.Name</h5>
              <h5 class="card-title">@pizza.Name</h5>
              <p class="card-text">Crust: @pizza.Crust</p>
              <p class="card-text">Size: @pizza.Size</p>
              <p class="card-text">Toppings:</p>
              @foreach (var t in pizza.Toppings)
              {
                <p class="card-text"> @t.Name</p>
              }
              <p class="card-text">Price: $@pizza.PizzaPrice()</p>

            </div>
          </div>
        </span>
      }
    }
  </div>
</div>