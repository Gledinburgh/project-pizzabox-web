@model OrderViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}
<section>
    <div class="text-center">
        <h1 class="display-4">Welcome To PizzaBox</h1>
    </div>
    <form asp-controller="order" method="post" asp-action="submit" class="form-check">
        @Html.AntiForgeryToken();
        @foreach (var item in Model.Sizes)
        {
            <div>
                <label class="form-check-label">@item</label>
                <input asp-for="SelectedCrust" class="form-check-input" type="radio" value=@item>
                @Html.ValidationMessageFor(m => m.SelectedCrust)
            </div>
        }
        <button class="btn btn-primary" type="submit">Submit form</button>
    </form>
    <form asp-controller="order" method="post" asp-action="test">
        <button type="submit">test</button>
    </form>
</section>
